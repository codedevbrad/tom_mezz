          } catch (e) {}
        }

        // initial + SPA changes
        var _ps = history.pushState, _rs = history.replaceState;
        history.pushState = function(){ var r=_ps.apply(this, arguments); notify('pushState'); return r; };
        history.replaceState = function(){ var r=_rs.apply(this, arguments); notify('replaceState'); return r; };
        window.addEventListener('popstate', function(){ notify('popstate'); });
        window.addEventListener('hashchange', function(){ notify('hashchange'); });

        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', function(){ notify('domcontentloaded'); });
        } else {
          notify('ready');
        }
      })();

        (function(h,o,t,j,a,r){

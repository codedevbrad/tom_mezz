---
import { Image } from "astro:assets";
import Dropdown from "../../../components/dropdown";
import logo from "../../../assets/logo-transparent.png";
---
   <style>
       .main-header {
          display: flex;
          justify-content: space-between;
          align-items: center;
          background: #2161b4;
          padding: 10px 20px;
          top: 0;
          z-index: 1000;
          width: 100%;
          }

          .header-block { display: flex; }

          .logo-block { flex: 1; }

          .logo-img { 

          width: 1000%;
          height: 120px; 
          object-fit: contain;
          }

          .title-nav-block {
          flex: 2;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          text-align: center;
          display: flex;
          gap: 10px;
          }

          .site-title h1 {
          font-size: 2.5rem;
          font-weight: 900;
          color: white;
          line-height: 1.1;
          }
          .site-title span {
          font-size: 2rem;
          font-weight: 600;
          letter-spacing: 1px;
          }
          .nav-menu {
          display: flex;
          gap: 20px;
          background-color: #d1a302;
          padding: 10px 20px;
          border-radius: 8px;
          align-items: center;
          }
          .nav-menu a {
          color: white;
          text-decoration: none;
          font-weight: bold;
          }
                    .contact-cta-block {
          flex: 1;
          flex-direction: column;
          display: flex;
          align-items: flex-end;
          justify-content: space-between;
          gap: 10px;
          }
          .contact-number {
          font-size: 2rem;
          font-weight: bold;
          color: white;
          }
          .upload-banner {
          background: url('3e367926-f981-433e-9cf6-098cf233b61f.png') no-repeat center right;
          background-size: cover;
          color: #000;
          padding: 10px;
          font-weight: bold;
          text-align: left;
          border-radius: 10px;
          height: 80px;
          background-color: #fff;
          box-shadow: 0 4px 8px rgba(0,0,0,0.2);
          font-size: 10px;
          display: flex;
          align-items: center;
          }
          .contact-cta-block {
          display: flex;
          justify-content: flex-end;
          align-items: center;
          padding: 1rem;
          }

          .whatsapp-button {
          display: inline-flex;
          align-items: center;
          gap: 0.5rem;
          background-color: #25D366;
          color: white;
          font-size: 1rem;
          font-weight: 600;
          text-decoration: none;
          padding: 0.75rem 1.25rem;
          border-radius: 6px;
          border: none;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
          transition: background-color 0.3s ease, transform 0.2s ease;
          }

          .whatsapp-button:hover {
          background-color: #1ebe57;
          transform: translateY(-2px);
          }
   </style>
   
   <header class="main-header">
      <div class="header-block logo-block">
        <Image src={logo} alt="Logo" class="logo-img" />
      </div>
      <div class="header-block title-nav-block">
        <div class="site-title">
          <h1>
            MONTON <br /><span> METALWORK </span>
          </h1>
        </div>
        <nav class="nav-menu">
          <a href="/">HOME</a>
          <a href="#about">ABOUT US</a>
          <Dropdown client:load/>
          <a href="#gallery">GALLERY</a>
        </nav>
      </div>
      <div class="header-block contact-cta-block">
        <a href="https://wa.me/447911123456?text=Hello%2C%20I%27m%20interested%20in%20your%20services"
          class="whatsapp-button" target="_blank" rel="noopener noreferrer">
          ðŸ’¬ Chat with us on WhatsApp
        </a>
      </div>
    </header>